<section class="container bg-dark my-4 p-4 rounded-1">
    <div class="main-body">
        <div class="row d-flex"> 
            <div class="col-md-3 mb-3">
                <div class="card-body bg-light rounded-3 text-secondary">
                    <div class="d-flex flex-column text-center p-1"> 
                        <h3>{{ currentPost.user.username }}</h3>
                        <h6>{{ currentPost.user.email }}</h6>
                    </div>   
                </div>
            </div>
            <div class="col-md-9" id="new">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="container-fluid p-3 bg-light">
                            <div class="card-header">
                                <h5>{{ currentPost.title }}</h5>
                            </div>
                            <div class="card-text">
                                {{ currentPost.body }}
                            </div>
                        </div>
                    </div>
                </div>
            {{#each currentPost.comments as |comment| }}
            {{> commentPartial}}
            {{/each}}
            <div class="row mt-3">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#commentModal">Leave comment</button>
            </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="commentModal" tabindex="-1" aria-labelledby="commentModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5>Write your comment!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="comment-text" class="col-form-label">Comment:</label>
                        <input type="text" class="form-control" id="comment-text">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button class="btn btn-primary">Post Comment</button>
            </div>
        </div>
    </div>
</div>

<script src="/js/post.js"></script>